{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./src"],
  "exclude": ["./example", "./playground", "./node_modules"]
}
